}

.head {
  font-size: 4.2rem;
  padding: 20px;
}

.vertical-center {
  position: relative;
  top: 40%;
  -webkit-transform: translateY(-40%);
  -ms-transform: translateY(-40%);
  transform: translateY(-40%);
}

.vertical-bottom {
  position: relative;
  top: 70%;
  -webkit-transform: translateY(-70%);
  -ms-transform: translateY(-70%);
  transform: translateY(-70%);
}

