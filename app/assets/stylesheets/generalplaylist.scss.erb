#section-1 {
  background: url('<%= asset_path("bg-record-light-transparent.png") %>') center center no-repeat;
  color: #3E5563;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-size: cover;
  a {
    text-decoration: none;
    color: #3E5563;
  }
}

.head {
  font-size: 4.2rem;
  padding: 20px;
}

.vertical-center {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.material-icons.md-18 { font-size: 18px; }
.material-icons.md-24 { font-size: 24px; }
.material-icons.md-36 { font-size: 36px; }
.material-icons.md-48 { font-size: 48px; }

.container {  // width: 100%;
}

.row {
  // width: 100%;
  margin-left: auto;
  margin-right: auto;
  // padding: 20px;
  margin-bottom: 0px;
}

.g-playlist-table {

  background-color: rgba(96, 125, 139, 0.3);
  padding: 5px;
  padding-bottom: 50px;
  font-size: 0.875em;
  min-width: 400px;
  max-width: 400px;

  th, td {
    // border-bottom: 1px solid #3C3F3D;
  }
  tr:hover {
    background-color: #3C3F3D;
  }

}

.pagination {
  cursor: default;
  /* self-clearing method: */
}
.pagination a, .pagination span, .pagination em {
  padding: 0.2em 0.5em;
  display: block;
  float: left;
  margin-right: 1px;
}

.pagination .disabled {
  display: none;
}

.pagination .current {
  font-style: normal;
  font-weight: bold;
  color: #455D6B;
  border: 1px solid #455D6B;
}

.pagination a {
  text-decoration: none;
  color: #FFFFFF;
  border: 1px solid #FFFFFF;
}

.pagination a:hover, .pagination a:focus {
    color: #FFFFFF;
    border-color: #FFFFFF;
}

.pagination .page_info {
  background: #2e6ab1;
  color: white;
  padding: 0.4em 0.6em;
  width: 22em;
  margin-bottom: 0.3em;
  text-align: center;
}

.pagination .page_info b {
    color: #000033;
    background: #6aa6ed;
    padding: 0.1em 0.25em;
}

.pagination:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

* html .pagination {
  height: 1%;
}

*:first-child + html .pagination {
  overflow: hidden;
}

@media only screen and (max-width: 768px) {
    /* For mobile phones: */
    .g-playlist-table {
      margin-left: auto;
      margin-right: auto;
      min-width: 95%;
      max-width: 95%;
      font-size: 1em;
    }
    table {
      width: 95%;
    }
    [class*="col"] {
      width: 95%;
    }
    // .row {
    //   padding: 0px;
    // }
    // .row .col {
    //   padding: 0px;
    // }
    .head {
      padding: 0px;
      padding-top: 20px;
      font-size: 2.5em;
    }
}
