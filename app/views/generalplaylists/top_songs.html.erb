<section id="section-1">
  <div class="head center">Charts</div>
  <div class="container row">
    <div class="col S12 M4 L4">

      <h4 class="center"><a href="generalplaylists/today_played_songs">Last played songs</a></h4>
      <table class="g-playlist-table">
        <tr>
          <th>Chart #</th>
          <th>Artist</th>
          <th>Title</th>
        </tr>
        <% @topsongs.each do |topsong| %>
        <tr>
          <td><%= @counter += 1 %>
          <td><%= topsong.artist.name %></td>
          <td><%= topsong.title %></td>
          <td><%= topsong.total_counter %></td>
        </tr>
        <% end %>
      </table>
      <p><%= will_paginate @topsongs %></p>
    </div>
  </div>
</section>
