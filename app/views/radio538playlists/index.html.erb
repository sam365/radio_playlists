<div class="center">
  <span class="blue-text"><h1>Radio 538 Playlist Counter</h1></span>
  <h6>Since 2-10-2016 17:00u | Total songs: <%= @radio538playlists.count %></h5>
</div>

<div class="container">
  <div class="row">
    <div class="col s12 m12 l12">
      <p><%= will_paginate @radio538playlists %></p>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m12 l12">
      <%= form_tag '/playlists', :method => 'get', role:"search" do %>
        <p>
          <%= text_field_tag :search, params[:search], placeholder: "Search artist or song...", class: "input-field" %>
          <%= submit_tag "Search", :name => nil, class: "waves-effect waves-light btn blue" %>
        <p>
      <% end %>
    </div>
  </div>

  <% @radio538playlists.each do |playlist| %>
    <div class="row">
      <div class="col s12 m12 l6">
        <table class="striped">
          <tr>
            <td id="playlist-variables">
              <b>Artist</b>
            </td>
            <td>
              <%= playlist.artist %><br>
            </td>
          </tr>
          <tr>
            <td>
              <b>Title</b>
            </td>
            <td>
              <%= playlist.title %><br>
            </td>
          </tr>
          <tr>
            <td>
              <b>Last time played</b>
            </td>
            <td>
              <%= playlist.time %><br>
            </td>
          </tr>
          <tr>
            <td>
              <b>Last date played</b>
            </td>
            <td>
              <%= playlist.date %><br>
            </td>
          </tr>
        </table>
      </div>
      <div class="col s12 m12 l6">
        <table class="striped">
          <tr>
            <td>
              <b>Day<b>
            </td>
            <td>
              <b>Week<b>
            </td>
            <td>
              <b>Month<b>
            </td>
            <td>
              <b>Year<b>
            </td>
            <td>
              <b>Total<b>
            </td>
          </tr>
          <tr>
            <td>
              <%= playlist.day_counter %>
            </td>
            <td>
              <%= playlist.week_counter %>
            </td>
            <td>
              <%= playlist.month_counter %>
            </td>
            <td>
              <%= playlist.year_counter %><br>
            </td>
            <td>
              <%= playlist.total_counter %><br>
            </td>
          </tr>
          <tr>
            <td class="center">
              <%= image_tag playlist.image, class: "responsive-img z-depth-1", size: "76x76" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>

  <div class="row">
    <p><%= will_paginate @radio538playlists %></p>
  </div>

</div>
